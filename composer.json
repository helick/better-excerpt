{
    "name": "helick/better-excerpt",
    "type": "wordpress-plugin",
    "description": "The Helick better excerpt plugin",
    "keywords": [
        "helick",
        "better excerpt"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/helick/better-excerpt/issues",
        "source": "https://github.com/helick/better-excerpt"
    },
    "authors": [
        {
            "name": "Evgenii Nasyrov",
            "email": "evgenii@helick.io"
        }
    ],
    "require": {
        "php": ">=7.1",
        "composer/installers": "^1.6",
        "helick/contracts": "dev-master"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Helick\\BetterExcerpt\\": "src/"
        }
    },
    "scripts": {
        "lint": [
            "phpcs -p --standard=psr2 src"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
